#! /usr/bin/env bash

declare options=(" quit
 vim
 doom
 spacemacs
 codium
 atom")

runwith="rofi -dmenu"

case "$1" in
    dmenu)
        runwith="dmenu"
    ;;
    rofi)
        runwith="rofi -dmenu"
    ;;
esac

choice=$(echo -e "${options[@]}" | $runwith -i -p 'Open editor: ' | awk -F ' ' '{print $2}')

case "$choice" in
	quit)
		echo "Program terminated." && exit 1
	;;
	vim)
                x-terminal-emulator -e vim
	;;
        doom)
                emacs --with-profile doom
	;;
        spacemacs)
                emacs --with-profile space
	;;
	codium)
		codium &
	;;
	*)
		exit 1
	;;
esac

