#! /usr/bin/env bash

case "$1" in
    lock)
        betterlockscreen -l dimblur -- --time-str="%H:%M"
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        systemctl suspend
        ;;
    hibernate)
        systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: i3exit {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
