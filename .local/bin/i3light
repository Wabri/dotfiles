#! /usr/bin/env bash

notification_time=250
light_delta=5

actual_light=$(light -G)

if [ $actual_light = "100.00" ] && [ $1 = "up" ] ; then
    exit 1
elif [ $actual_light = "0.00" ] && [ $1 = "down" ] ; then
    exit 1
else
    case "$1" in
        up)
            light -A $light_delta
            notify-send --expire-time=$notification_time "$(light -G) "
        ;;
        down)
            light -U $light_delta
            notify-send --expire-time=$notification_time "$(light -G) "
        ;;
        *)
            exit 2
        ;;
    esac
fi


